generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                     String    @id @default(cuid())
  email                  String    @unique
  name                   String
  github_installation_id String?   @unique
  projects               Project[]
}

model Project {
  project_id      Int                    @id @default(autoincrement())
  name            String
  description     String
  user_id         String
  user            User                   @relation(fields: [user_id], references: [id])
  created_at      DateTime               @default(now())
  github_url      String
  build_cmd       String
  output_dir      String
  build_branch    String
  primary_domain  String
  deployments     Deployment[]
  project_env     Project_ENV_Variables?
}

model Deployment {
  deployment_id    Int      @id @default(autoincrement())
  project_id       Int
  project          Project  @relation(fields: [project_id], references: [project_id])
  created_at       DateTime @default(now())
  is_build_success Boolean?
  preview_url      String?
  build_logs       String?
}

model Project_ENV_Variables {
  id           Int     @id @default(autoincrement())
  project_id   Int     @unique
  project      Project @relation(fields: [project_id], references: [project_id])
  env_variable Json[]
}
